// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "vim_mode": false,
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_size": 18,
  "buffer_line_height": { "custom": 2 },
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha (Blur)",
    "dark": "Catppuccin Espresso (Blur)"
  },
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_weight": 500,
  "buffer_font_weight": 500,
  "relative_line_numbers": true,
  "tab_bar": {
    "show": true
  },
  // NOTE: Zen mode, refer https://github.com/zed-industries/zed/issues/4382 when it's resolved
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "soft_wrap": "editor_width",
  "auto_fold_dirs": false,
  "cursor_shape": "bar",
  "file_scan_exclusions": ["/app/"],

  // *
  // * Theme override to be little less transparent
  // *
  "experimental.theme_overrides": {
    // * Catpuccin mocha (blur)
    // "background": "#1e1e2ef3",
    // "elevated_surface.background": "#181825",
    // "surface.background": "#1e1e2ed0",
    // "status_bar.background": "#1e1e2ef3",
    // "title_bar.background": "#1e1e2ef3"

    // * Catpuccin espresso (blur)
    "background": "#000000e0",
    "elevated_surface.background": "#181825",
    "surface.background": "#000000e0",
    "status_bar.background": "#000000e0",
    "title_bar.background": "#000000e0"
  }
}
